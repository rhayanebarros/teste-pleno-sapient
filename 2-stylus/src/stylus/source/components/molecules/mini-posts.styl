#sidebar

  .mini-posts
    max-width 409.5px
    width 100%
    .mini-post
      border 1px solid #EEEEEE
      background-color #FFFFFF
      max-width 409.5px
      margin 0 0 40px
      height 296px
      position relative

      .header
        position absolute
        left 23px
        bottom 26px
        width 100%

        .tertiary_title
          display block
          max-width 292px
          width 100%

          a
            color #3C3B3B
            font-family 'Source Sans Pro', sans-serif
            font-weight 600
            font-size 14px
            line-height 16px
            letter-spacing 3.92px
            text-transform uppercase
            max-width 292px
        
        .published
          display block
          color #808080
          font-family 'Source Sans Pro', sans-serif
          font-weight normal
          font-size 12px
          letter-spacing 1.44px
          text-transform uppercase
          margin 8px 0 0
          max-width 292px

        .author
          position absolute
          right 47px
          bottom 0

          img
            border-radius 30px

      .image
        img
          width 100%